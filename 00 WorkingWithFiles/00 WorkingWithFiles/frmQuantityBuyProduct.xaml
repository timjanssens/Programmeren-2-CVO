<Window x:Class="_00_WorkingWithFiles.frmQuantityBuyProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_00_WorkingWithFiles"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Quantity of Product" Height="150" Width="400">
    <Grid>
        <Label Content="How many pieces of product {NAME} do you want to buy?" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnBuy" Content="Buy" HorizontalAlignment="Left" Margin="247,63,0,0" VerticalAlignment="Top" Width="75" Click="btnBuy_Click"/>
        <Label Content="Number" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>
        <xctk:IntegerUpDown x:Name="txtNumberOfProductToBuy" Value="0" Increment="1" HorizontalAlignment="Left" Margin="69,63,0,0" VerticalAlignment="Top" Width="135"/>
    </Grid>
</Window>
